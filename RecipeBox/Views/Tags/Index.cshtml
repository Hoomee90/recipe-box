@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h4>@User.Identity.Name's Tags</h4>
<hr>

@if (@Model.Count == 0)
{
  <h3>No tags have been created yet!</h3>
} 
else
{
  <ul>
    @foreach (Tag tag in Model)
    {
      <li>@Html.ActionLink($"{tag.Name}", "Details", new { id = tag.TagId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new tag", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>